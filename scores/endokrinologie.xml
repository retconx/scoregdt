            <beurteilung>
                <ergebnisbereich>&#x3e; 6 Punkte</ergebnisbereich>
                <beschreibung>Hochgradig verdächtig, Feinnadelpunktion &#x3e; 10 mm empfohlen</beschreibung>
                <regel>GROESSERALS 6</regel>
            </beurteilung> 
        </auswertung>
