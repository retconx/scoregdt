            <widget id="101" typ="RadioButton" titel="Spongiform">
                <wert>0</wert>
            </widget>
            <widget id="102" typ="RadioButton" titel="Gemischt zystisch und solide">
                <wert>1</wert>
            </widget>
            <widget id="103" typ="RadioButton" titel="Solide oder fast vollständig solide">
                <wert>2</wert>
            </widget>
